                    <a href="<%= link.path %>" class="nav-link <%= currentPath === link.path ? 'active' : '' %>">
                        <%= link.name %>
                            <% if (currentPath===link.path) { %>
                                <div class="underline"></div>
                                <% } %>
                    </a>
                    <% }); %>
